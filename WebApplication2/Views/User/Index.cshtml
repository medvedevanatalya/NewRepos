
@{
    ViewBag.Title = "Посетители";
}

<h2>Посетители</h2>

@Html.ActionLink("Создать пользователя", "CreateAndEdit", "User")

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">ФИО</th>
            <th scope="col">Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.Users)
        {
            <tr>
                <td scope="row">@item.FIO</td>
                <td scope="row">@item.EmailUser</td>
                <td scope="row">@Html.ActionLink("Редактировать пользователя", "CreateAndEdit", "User", new { id = item.Id }, null)</td>
                <td scope="row">@Html.ActionLink("Удалить пользователя", "Delete", "User", new { id = @item.Id }, null)</td>
            </tr>
        }
</table>


